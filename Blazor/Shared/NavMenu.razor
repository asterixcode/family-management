<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Family Management</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>


<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <AuthorizeView>
        
        <NotAuthorized>
            <ul class="nav flex-column">
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="/login" Match="NavLinkMatch.All">
                        <span class="oi oi-account-login" aria-hidden="true"></span> Login
                    </NavLink>
                    <NavLink class="nav-link" href="/register" Match="NavLinkMatch.All">
                        <span class="oi oi-account-login" aria-hidden="true"></span> Register
                    </NavLink>
                </li>
            </ul>
        </NotAuthorized>
       
        <Authorized>
            <ul class="nav flex-column">
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="/profile" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Profile
                    </NavLink>
                    <NavLink class="nav-link" href="/familymy">
                        <span class="oi oi-people" aria-hidden="true"></span> My Family
                    </NavLink>
                    <NavLink class="nav-link" href="/adultall">
                        <span class="oi oi-people" aria-hidden="true"></span> Adults
                    </NavLink>
                </li>
            </ul>
        </Authorized>
    </AuthorizeView>
    
    <AuthorizeView Policy="AdminOnly">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="AdultAdd">
                <span class="oi oi-plus" aria-hidden="true"></span> Add Adult
            </NavLink>
        </li>
    </AuthorizeView>
</div>


@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}